doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title products Page
    link(rel="stylesheet", href="/styles/global.css")
  body
    .container
      h1= title
      p= description
      .products-grid
        each product in products
          .item-container
            a(href=`/products/${product.id}`)
              h2.item-heading= product.name
              p.item-description= product.description
              p.item-price Price: $#{product.price}
              button.item-cart-btn Add To Cart